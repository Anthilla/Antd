newwin.focus();
}
function BootMGR() {
newwin=open("kerbynet?Action=Render&Object=bootmgr&STk=<xvar STk>", "BootSetup","top=250,left=450,width=575,height=390,scrollbars=no,menubar=no,toolbar=no,statusbar=no");
