<script>
function domainchanged() {
  X=document.data;
  if (X.Domain.value=="opendns") {
    if (X.Host.value=="") X.Host.value="N/A";
    X.Host.disabled=true;
  } else {
    if (X.Host.value=="N/A") X.Host.value="";
    X.Host.disabled=false;
  }
}
function showLogs() {
   var newwin=window.open("kerbynet?Section=LOG&STk=<xvar STk>&Action=Manage&Process=DDNS","ManageLog","top=100,left=100,width=850,height=600,scrollbars=yes,menubar=no,toolbar=no,statusbar=no");
   newwin.focus();
}
function loaded() {
  X=document.data;
  if ("<xvar /system/ddnsclient/Enabled>"=="yes") {
    X.ActiveDDNS.checked=true;
  } else {
    X.ActiveDDNS.checked=false;
  }
  X.UserAccount.value="<xvar /system/ddnsclient/Username>";
  tmp="<xvar /system/ddnsclient/Host>";
  if (tmp.indexOf(".")>=0) {
    X.Domain.value=tmp.substr(tmp.indexOf(".")+1);
    X.Host.value=tmp.substr(0,tmp.indexOf("."));
  } else {
    X.Host.value=tmp;
    X.Domain.value="dyndns.org";
  }
   
  domainchanged();
}
function saveddns() {
  X=document.data;
  if (X.Host.value.indexOf(".")>=0) {
    X.Host.value=X.Host.value.substr(0,X.Host.value.indexOf("."));
  }
  if  (X.Host.value=="") {
    alert("The hostname cannot be empty.");
    X.Host.focus();
    return;
  }
  if  (X.UserAccount.value=="") {
    alert("The username cannot be empty.");
    X.UserAccount.focus();
    return;
  }
  if  (X.PWAccount.value!="") {
    if  (X.PWAccount.value!=X.PWAccount2.value) {
      alert("The passwords do not match.");
      X.PWAccount.focus();
      X.PWAccount.select();
      return;
    }
  }
  X.submit();
}
</script>
