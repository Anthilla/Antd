#!/bin/sh
CIDR="$1"
[ -z "$CIDR" ] && CIDR=32
[ "$CIDR" -gt 32 ] && CIDR=32
[ "$CIDR" = 32 ] && echo 255.255.255.255 && exit
[ "$CIDR" = 31 ] && echo 255.255.255.254 && exit
[ "$CIDR" = 30 ] && echo 255.255.255.252 && exit
[ "$CIDR" = 29 ] && echo 255.255.255.248 && exit
[ "$CIDR" = 28 ] && echo 255.255.255.240 && exit
[ "$CIDR" = 27 ] && echo 255.255.255.224 && exit
[ "$CIDR" = 26 ] && echo 255.255.255.192 && exit
[ "$CIDR" = 25 ] && echo 255.255.255.128 && exit
[ "$CIDR" = 24 ] && echo 255.255.255.0   && exit
[ "$CIDR" = 23 ] && echo 255.255.254.0 && exit
[ "$CIDR" = 22 ] && echo 255.255.252.0 && exit
[ "$CIDR" = 21 ] && echo 255.255.248.0 && exit
[ "$CIDR" = 20 ] && echo 255.255.240.0 && exit
[ "$CIDR" = 19 ] && echo 255.255.224.0 && exit
[ "$CIDR" = 18 ] && echo 255.255.192.0 && exit
[ "$CIDR" = 17 ] && echo 255.255.128.0 && exit
[ "$CIDR" = 16 ] && echo 255.255.0.0   && exit
[ "$CIDR" = 15 ] && echo 255.254.0.0 && exit
[ "$CIDR" = 14 ] && echo 255.252.0.0 && exit
[ "$CIDR" = 13 ] && echo 255.248.0.0 && exit
[ "$CIDR" = 12 ] && echo 255.240.0.0 && exit
[ "$CIDR" = 11 ] && echo 255.224.0.0 && exit
[ "$CIDR" = 10 ] && echo 255.192.0.0 && exit
[ "$CIDR" = 9  ] && echo 255.128.0.0 && exit
[ "$CIDR" = 8  ] && echo 255.0.0.0   && exit
[ "$CIDR" = 7  ] && echo 254.0.0.0 && exit
[ "$CIDR" = 6  ] && echo 252.0.0.0 && exit
[ "$CIDR" = 5  ] && echo 248.0.0.0 && exit
[ "$CIDR" = 4  ] && echo 240.0.0.0 && exit
[ "$CIDR" = 3  ] && echo 224.0.0.0 && exit
[ "$CIDR" = 2  ] && echo 192.0.0.0 && exit
[ "$CIDR" = 1  ] && echo 128.0.0.0 && exit
[ "$CIDR" = 0  ] && echo 0.0.0.0   && exit
