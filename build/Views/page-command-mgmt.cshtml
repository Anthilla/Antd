@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{Layout = "_layout.cshtml";}

@section PageBar {
    <style type="text/css">
        #System-TB {
            border-bottom: 10px solid #A7BD39;
            height: 80px !important;
        }
    </style>
    <nav class="navigation-bar bg-transparent page-bar menu-bar">
        <nav class="navigation-bar-content">
            <div class="element upcase fg-anthilla-green border-2-anthilla-gray-m no-overlay" style="padding-top: 11px;"><i class="icon-rocket on-left" style="line-height: 5px;"></i>Command Management</div>
            <div class="element-divider"></div>

            <a class="element place-right upcase fg-anthilla-green border-2-anthilla-gray-m no-overlay anchor" data-scrollto="top" style="padding-top: 8px;">
                <i class="icon-arrow-up"></i>
            </a>
        </nav>
    </nav>
}

@section MainContent {
    <table class="table hovered">
        <thead>
            <tr>
                <th>Command</th>
                <th>Layout</th>
                <th>&nbsp</th>
                <th>&nbsp</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Antd.CommandManagement.CommandDB.CommandInputModel command in Model.list) {
                if (command != null) {
                <tr>
                    <td>
                        <p>@command.File @command.Arguments</p>
                    </td>
                    <td>
                        <p>{ @command.Layout }</p>
                    </td>
                    <td style="padding: 15px;" class="bg-anthilla-gray-m">
                        <i class="icon-book on-left"></i>
                        <p style="font-style: oblique;">@command.Notes</p>
                    </td>
                    <td>
                        <p data-guid="@command.Guid" class="button bg-orange delete-this">Delete</p>
                        <p data-guid="@command.Guid" class="button bg-green launch-this">Launch</p>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
}

@section Scripts {
    <script type="text/javascript">

        $('.delete-this').click(function () {
            var guid = $(this).attr('data-guid');
            $.ajax({
                url: '/command/mgmt/delete/' + guid,
                type: 'POST',
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    console.info(data);
                    return false;
                }
            });
        });

        $('.launch-this').click(function () {
            var guid = $(this).attr('data-guid');
            $.ajax({
                url: '/command/mgmt/launch/' + guid,
                type: 'POST',
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    console.info(data);
                    return false;
                }
            });
        });

    </script>
}