<div class="cctable-container border-2-anthilla-gray" style="width: 100%; min-height: 100px;  margin-bottom: 15px; padding: 15px;" data-guid="@Model.Guid">
    <legend><i class="icon-wrench on-left"></i> @Model.Alias</legend>
    <table class="table" data-table-content="@Model.Guid">
        <tbody>
            @functions{
                public string[] SplitText(string text) {
                    return text.Split(new String[] { "\n" }, StringSplitOptions.None).ToArray();
                }
            }

            @foreach (antdlib.CCTable.CCTableRowModel row in Model.Content) {
                if (row.ConfType == antdlib.CCTable.CCTableFlags.ConfType.File) {
                    <tr data-row-guid="@row.Guid" data-row-nuid="@row.NUid">
                        <td style="width: 90%;">
                            @if (antdlib.CCTable.CCTableConf.Mapping.Repository.CheckMapForFile(row.File) == false) {
                                <form action="/cctable/map/conf" method="POST" enctype="multipart/form-data">
                                    <label><i class="icon-file on-left"></i> @row.File</label>
                                    <table class="table bg-anthilla-gray" style="margin-left: 25px; width: 95%;">
                                        <thead>
                                            <tr>
                                                <td></td>
                                                <td colspan="1">
                                                    <label>CharComment</label>
                                                </td>
                                                <td>
                                                    <input name="CharComment" type="text" maxlength="1" style="margin-left: 17px; width: 30px; min-width: 30px; padding-left: 10px;" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td colspan="1">
                                                    <label>PermitsInclude</label>
                                                </td>
                                                <td>
                                                    <input name="PermitsInclude" type="checkbox" />
                                                    <input name="VerbInclude" type="text" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td colspan="1">
                                                    <label>PermitsSection</label>
                                                </td>
                                                <td>
                                                    <input name="PermitsSection" type="checkbox" />
                                                    <input name="CharSectionOpen" type="text" maxlength="1" style="width: 30px; min-width: 30px; padding-left: 10px;" />
                                                    <input name="CharSectionClose" type="text" maxlength="1" style="width: 30px; min-width: 30px; padding-left: 10px;" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td colspan="1">
                                                    <label>CharKevValueSeparator</label>
                                                </td>
                                                <td>
                                                    <input name="CharKevValueSeparator" type="text" maxlength="1" style="margin-left: 17px; width: 30px; min-width: 30px; padding-left: 10px;" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td colspan="1">
                                                    <label>PermitsBlock</label>
                                                </td>
                                                <td>
                                                    <input name="PermitsBlock" type="checkbox" />
                                                    <input name="CharBlockOpen" type="text" maxlength="1" style="width: 30px; min-width: 30px; padding-left: 10px;" />
                                                    <input name="CharBlockClose" type="text" maxlength="1" style="width: 30px; min-width: 30px; padding-left: 10px;" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td colspan="1">
                                                    <label>CharEndOfLine</label>
                                                </td>
                                                <td>
                                                    <input name="CharEndOfLine" type="text" maxlength="1" style="margin-left: 17px; width: 30px; min-width: 30px; padding-left: 10px;" />
                                                    This can be left blank and a default char will be used to detect the end of the line
                                                </td>
                                            </tr>
                                        </thead>
                                        <tbody data-role="file-rows" style="border-top: 3px solid #464646;">
                                            @foreach (string line in SplitText(antdlib.FileSystem.ReadFile(row.File))) {
                                        <tr style="border-bottom: 1px solid #464646;">
                                            <td class="LineNumber" style="width: 20px; font-size: 10px; font-family: monospace; font-weight: normal;"></td>
                                            <td style="font-family: monospace; font-weight: normal; width: 80%;" colspan="3">@line</td>
                                            <td>
                                                <input name="LineNumber" type="hidden" value="" />
                                                <select name="LineType">
                                                    <option value="boolean">bool</option>
                                                    <option value="string">str</option>
                                                    <option value="array">arr</option>
                                                    <option value="none">x</option>
                                                </select>
                                            </td>
                                        </tr>
                                        }
                                        </tbody>
                                    </table>
                                    <input name="FilePath" type="hidden" value="@row.File" />
                                    <input name="Context" type="hidden" value="@Model.Context" />
                                    <input type="submit" class="bg-anthilla-green " value="Update" style="color:#3A3A3A !important;">
                                </form>
                            }
                            else {
                                <p>Esiste una mappatura per @row.File</p>
                                <p>L'ho già salvata a db, con l'azione di prima.</p>
                                <p>Basta andare a prendere il metoro Reading.Convert() e creare una tabella in base al modello recuperato</p>
                                <p>Usando il valore di '@@row.File'</p>
                            }
                        </td>
                    </tr>
                }
                if (row.ConfType == antdlib.CCTable.CCTableFlags.ConfType.Directory) {
                    <tr data-row-guid="@row.Guid" data-row-nuid="@row.NUid">
                        <td style="width: 90%;">
                            <label><i class="icon-folder on-left"></i> @row.File</label>
                            @foreach (antdlib.CCTable.CCTableConfModel file in antdlib.CCTable.CCTableRepository.GetEtcConfs(row.File)) {
                                <div data-role="panel" class="panel collapsed border-2-anthilla-gray" style="margin-left: 20px; margin-bottom: 4px;">
                                    <div class="panel-header bg-trasnsparent fg-white">
                                        <label class="fg-white"><i class="icon-folder on-left fg-white"></i> @file.Path</label>
                                    </div>
                                    <div class="panel-content" style="display: none;">
                                        <form action="/cctable/update/conf" method="POST" enctype="multipart/form-data">
                                            <textarea name="FileText" class="bg-anthilla-gray fg-white border-anthilla-gray" style="width: 90%; min-width: 90%;max-width: 90%; min-height: 250px; padding: 5px;">@antdlib.FileSystem.ReadFile(file.Path)</textarea>
                                            <input name="FileName" type="hidden" value="@file.Path" />
                                            <input name="Context" type="hidden" value="@Model.Context" />
                                            <input type="submit" class="bg-anthilla-green " value="Update" style="color:#3A3A3A !important;">
                                        </form>
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <form action="/cctable/row/conf" method="POST" enctype="multipart/form-data" data-table-form="@Model.Guid" class="grid border-anthilla-gray" style="display: none; padding: 5px; margin-bottom: -20px !important;">
        <div class="row">
            <div class="span3">
                <label>File or Directory</label>
            </div>
            <div class="span7">
                <input type="hidden" name="TableGuid" value="@Model.Guid">
                <input type="hidden" name="TableName" value="@Model.Alias">
                <input type="hidden" name="Context" value="@Model.Context">
                <div>
                    <input id="show-etc-confs" name="File" type="text">
                </div>
            </div>
        </div>
        <hr class="bg-anthilla-gray" style="height: 1px !important;">
        <div class="row">
            <div class="span3">
                <label>&nbsp</label>
            </div>
            <div class="span7">
                <input class="bg-anthilla-green" type="submit" value="Create" style="width: 90%;">
            </div>
        </div>
    </form>
    <hr class="bg-anthilla-gray" />
    <input type="button" class="bg-anthilla-blu" data-cctable-role="add-row" data-table-guid="@Model.Guid" value="New Row" />
    <input type="button" class="bg-anthilla-orange" data-cctable-role="delete-table" data-table-guid="@Model.Guid" value="Delete" />
</div>
