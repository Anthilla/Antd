@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{Layout = "_layout.cshtml";}

@section PageBar {
    <style type="text/css">
        #Hypervisor-TB {
            border-bottom: 10px solid #A7BD39;
            height: 80px !important;
        }
    </style>
    <nav class="navigation-bar bg-anthilla-gray-m page-bar menu-bar" style="height: 50px !important;">
        <nav class="navigation-bar-content">
            <div class="element upcase fg-anthilla-green border-2-anthilla-gray-m no-overlay" style="padding-top: 11px;">
                <i class="icon-box on-left" style="line-height: 5px;"></i>
                Hypervisor
            </div>
            <div class="element-divider"></div>

            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#Hosts" style="padding-top: 11px;">
                Hosts
            </a>
            <div class="element-divider"></div>
            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#VMS" style="padding-top: 11px;">
                Virtual Machines
            </a>
            <div class="element-divider"></div>
            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#NewVM" style="padding-top: 11px;">
                Create VM
            </a>
            <div class="element-divider"></div>
            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#Datastore" style="padding-top: 11px;">
                Datastore
            </a>
            <div class="element-divider"></div>
            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#Backup" style="padding-top: 11px;">
                Backup
            </a>
            <div class="element-divider"></div>

            <a class="element place-right upcase fg-anthilla-green border-2-anthilla-gray-m no-overlay anchor" data-scrollto="top" style="padding-top: 8px;">
                <i class="icon-arrow-up"></i>
            </a>
            <div class="element-divider place-right"></div>
            <a onclick="SetCreate()" class="element place-right upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#DashboardForm" style="padding-top: 11px;">
                New Table
            </a>
        </nav>
    </nav>

}

@section Dashboard {
    @Html.Partial("_cctable-dashboard", Model.CurrentContext)
}

@section MainContent {
    @if (Model.Count > 0) {
        @Html.Partial("_cctable-main", Model.CCTable)
    }
    @Html.Partial("page-hypervisor-hosts", Model)
    @Html.Partial("page-hypervisor-vms", Model)
    @Html.Partial("page-hypervisor-newvm", Model)
    @Html.Partial("page-hypervisor-datastore", Model)
    @Html.Partial("page-hypervisor-backup", Model)
}

@section Scripts {

}