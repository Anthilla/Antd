            url: '/apps/start/server/',
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                alert(data);
                location.reload(true);
                return false;
            }
        });
    });

    $('#StopAnthillaSP').click(function (e) {
        jQuery.support.cors = true;
        $.ajax({
            url: '/apps/stop/sp/',
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                alert(data);
                location.reload(true);
                return false;
            }
        });
    });

    $('#StopAnthillaServer').click(function (e) {
        jQuery.support.cors = true;
        $.ajax({
            url: '/apps/stop/server/',
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                alert(data);
                location.reload(true);
                return false;
            }
        });
    });
</script>
