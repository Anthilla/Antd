<legend id="Anthilasp">Anthilla SP</legend>
<table class="table hovered">
    <tbody>
        @if (Antd.Apps.AnthillaSP.Units.CheckFiles() == false) {
            <tr>
                <td colspan="2">
                    <input type="button" id="SetUnits" class="bg-indigo" value="Set Units" />
                </td>
            </tr>
        }
        @if (Antd.Apps.AnthillaSP.Units.CheckFiles() == true) {
            <tr>
                <td colspan="2">
                    <input type="button" id="ApplyUnits" class="bg-indigo" value="Apply Units" />
                </td>
            </tr>
        }
        <tr>
            <td>
                <label>Anthilla SP</label>
            </td>
            <td>
                @if (Antd.Apps.AnthillaSP.Status.IsActiveAnthillaSP() == false) { 
                    <input type="button" id="StartAnthillaSP" class="bg-indigo" value="Start AnthillaSP" />
                }
                else {
                    <input type="button" id="StopAnthillaSP" class="bg-darkIndigo" value="Stop AnthillaSP" />
                }
            </td>
        </tr>
        <tr>
            <td colspan="2">
                @Antd.Apps.AnthillaSP.Status.AnthillaSP();
            </td>
        </tr>
        <tr>
            <td>
                <label>Anthilla Server</label>
            </td>
            <td>
                @if (Antd.Apps.AnthillaSP.Status.IsActiveAnthillaSP() == false) { 
                    <input type="button" id="StartAnthillaServer" class="bg-indigo" value="Start AnthillaServer" />
                }
                else {
                    <input type="button" id="StopAnthillaServer" class="bg-darkIndigo" value="Stop AnthillaServer" />
                }
            </td>
        </tr>
        <tr>
            <td colspan="2">
                @Antd.Apps.AnthillaSP.Status.AnthillaServer();
            </td>
        </tr>
        @*        <tr>
            <td style="width: 250px;"></td>
            <td colspan="2">
                <a href="http://localhost:8085/" class="button bg-indigo">Go to AnthillaSP</a>
            </td>
        </tr>
        <tr>
            <td style="width: 250px;"></td>
            <td colspan="2">
                <a href="http://localhost:9999/" class="button bg-indigo">Go to AnthillaServer</a>
            </td>
        </tr>*@
    </tbody>
</table>
<hr />
<script type="text/javascript">
    $('#SetUnits').click(function (e) {
        jQuery.support.cors = true;
        $.ajax({
            url: '/apps/set/anthillasp/',
            type: 'GET',
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                location.reload(true);
                return false;
            }
        });
    });

    $('#ApplyUnits').click(function (e) {
        jQuery.support.cors = true;
        $.ajax({
            url: '/apps/apply/anthillasp/',
