@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{Layout = "_layout.cshtml";}

@section PageBar {
    <style type="text/css">
        #Info-TB {
            border-bottom: 10px solid #A7BD39;
            height: 80px !important;
        }
    </style>
    <nav class="navigation-bar bg-anthilla-gray-m page-bar menu-bar">
        <nav class="navigation-bar-content">
            <div class="element upcase fg-anthilla-green border-2-anthilla-gray-m no-overlay" style="padding-top: 11px;">
                <i class="icon-eye on-left" style="line-height: 5px;"></i>
                Info
            </div>
            <div class="element-divider"></div>

            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#Meminfo" style="padding-top: 11px;">
                Meminfo
            </a>
            <div class="element-divider"></div>
            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#Cpuinfo" style="padding-top: 11px;">
                Cpuinfo
            </a>
            <div class="element-divider"></div>
            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#Ifconfig" style="padding-top: 11px;">
                Ifconfig
            </a>
            <div class="element-divider"></div>
            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#Dmidecode" style="padding-top: 11px;">
                Dmidecode
            </a>
            <div class="element-divider"></div>
            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#Version" style="padding-top: 11px;">
                Version
            </a>
            <div class="element-divider"></div>
            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#Procs" style="padding-top: 11px;">
                Procs
            </a>
            <div class="element-divider"></div>

            <a class="element place-right upcase fg-anthilla-green border-2-anthilla-gray-m no-overlay anchor" data-scrollto="top" style="padding-top: 8px;">
                <i class="icon-arrow-up"></i>
            </a>
        </nav>
    </nav>

}

@section Dashboard {
    @Html.Partial("page-info-meminfo", Model)
    @Html.Partial("page-info-cpuinfo", Model)
    @Html.Partial("page-info-ifconfig", Model)
    @Html.Partial("page-info-dmidecode", Model)
    @Html.Partial("page-info-version", Model)
    @Html.Partial("page-info-procs", Model)
}

@section Scripts {
    <script type="text/javascript">
        $('.kill-this').click(function () {
            var self = $(this);
            var pid = self.attr('data-pid');
            jQuery.support.cors = true;
            $.ajax({
                url: '/info/killproc/',
                type: 'POST',
                data: { data: pid },
                success: function () {
                    self.parend('tr').hide();
                    return false;
                }
            });
        });
    </script>
}