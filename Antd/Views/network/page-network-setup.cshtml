<legend id="Setup">Setup</legend>
<div class="border-2-anthilla-gray" style="width: 100%; min-height: 100px;  margin-bottom: 15px; padding: 15px;">
    <form action="/network/boot" method="POST" enctype="multipart/form-data">
        <div class="grid">
            <div class="row">
                <div class="span4">
                    <label>Select Network Boot Type</label>
                </div>
                <div class="span10">
                    <select id="NetworkBootType" name="BootType">
                        <option value="manual"> manual </option>
                        <option value="networkd"> networkd </option>
                    </select>
                </div>
                <div class="span4">
                    <input id="submit" class="bg-blue fg-white" type="submit" value="Apply">
                </div>
            </div>
        </div>
    </form>
</div>

<div class="border-2-anthilla-gray" style="width: 100%; height: 450px; min-height: 450px; margin-bottom: 15px; padding: 15px;">
    <form action="/network/boot/edit" method="POST" enctype="multipart/form-data">
        <div class="grid">
            <div class="row">
                <div class="span4">
                    <label>Edit Network Configuration Files</label>
                </div>
            </div>
            <div class="row">
                <div class="span12">
                    <div data-role="tab-control" class="tab-control">
                        <ul class="tabs">
                            <li class="active"><a href="#encf_network">Network Configuration</a></li>
                            <li><a href="#encf_firewall">Firewall Configuration</a></li>
                        </ul>
                        <div class="frames">
                            <div id="encf_network" class="frame" style="display: block;">
                                <textarea name="NetworkConfiguration" style="width: 90%; min-height: 100%;" class="bg-anthilla-gray fg-white">
                                    @antdlib.Network.Management.NetworkConfiguration.NetworkFile.Content
                                </textarea>
                            </div>
                            <div id="encf_firewall" class="frame" style="display: none;">
                                <textarea name="FirewallConfiguration" style="width: 90%; min-height: 100%;" class="bg-anthilla-gray fg-white">
                                    @antdlib.Network.Management.NetworkConfiguration.FirewallFile.Content
                                </textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="span12">
                    <input id="submit" class="bg-blue fg-white" type="submit" value="Apply" style="width: 90%;">
                </div>
            </div>
        </div>
    </form>
</div>