<legend id="Disks">Disks & Volumes</legend>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>UUID</th>
            <th>Sec Type</th>
            <th>Label</th>
            <th>Part Label</th>
            <th>Part UUID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Antd.Storage.Volumes.Block blk in Antd.Storage.Volumes.Blkid()) { 
            <tr>
                <td class="right">@blk.Name</td>
                <td class="right">@blk.Type</td>
                <td class="right">@blk.UUID</td>
                <td class="right">@blk.SecType</td>
                <td class="right">@blk.Label</td>
                <td class="right">@blk.PartLabel</td>
                <td class="right">@blk.PartUUID</td>
            </tr>
        }
    </tbody>
</table>
<hr class="bg-anthilla-gray" />
<div class="tab-control" data-role="tab-control">

    <ul class="tabs">
        <li class="active"><a href="#ByID">Disk By ID</a></li>
        <li><a href="#ByLabel">Disk By Label</a></li>
        <li><a href="#ByPartLabel">Disk By PartLabel</a></li>
        <li><a href="#ByPartUuid">Disk By PartUuid</a></li>
        <li><a href="#ByUuid">Disk By Uuid</a></li>
    </ul>

    <div class="frames">
        <div class="frame" id="ByID">
            <ul class="fg-white">
                @foreach (string d in Antd.Storage.Disks.GET.ByID()) {
                    <li>@d</li>
                }
            </ul>
        </div>

        <div class="frame" id="ByLabel">
            <ul class="fg-white">
                @foreach (string d in Antd.Storage.Disks.GET.ByLabel()) {
                    <li>@d</li>
                }
            </ul>
        </div>

        <div class="frame" id="ByPartLabel">
            <ul class="fg-white">
                @foreach (string d in Antd.Storage.Disks.GET.ByPartLabel()) {
                    <li>@d</li>
                }
            </ul>
        </div>

        <div class="frame" id="ByPartUuid">
            <ul class="fg-white">
                @foreach (string d in Antd.Storage.Disks.GET.ByPartUuid()) {
                    <li>@d</li>
                }
            </ul>
        </div>

        <div class="frame" id="ByUuid">
            <ul class="fg-white">
                @foreach (string d in Antd.Storage.Disks.GET.ByUuid()) {
                    <li>@d</li>
                }
            </ul>
        </div>
    </div>
</div>
<hr class="bg-anthilla-gray" />
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Maj</th>
            <th>Min</th>
            <th>RM</th>
            <th>Size</th>
            <th>RO</th>
            <th>Type</th>
            <th>Mount point</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Antd.Storage.Volumes.Block blk in Antd.Storage.Volumes.Lsblk()) { 
            <tr>
                <td class="right">@blk.Name</td>
                <td class="right">@blk.Maj</td>
                <td class="right">@blk.Min</td>
                <td class="right">@blk.Rm</td>
                <td class="right">@blk.Size</td>
                <td class="right">@blk.Ro</td>
                <td class="right">@blk.Type</td>
                <td class="right">@blk.MountPoint</td>
            </tr>
        }
    </tbody>
</table>