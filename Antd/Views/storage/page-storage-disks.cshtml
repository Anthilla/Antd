<legend id="Disks">Disks & Volumes</legend>
<i id="ReloadVolumes" style="float: right; position: relative; top: -50px; right: 15px; font-size: 20px; margin-bottom: -20px;" class="icon-loop"></i>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Size</th>
            <th>Label</th>
            <th>UUID</th>
            <th>Part Label</th>
            <th>Part UUID</th>
            <th>FS Type</th>
            <th>Disk Type</th>
            <th>Mount Point</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Antd.Storage.Volumes.Block blk in Model) { 
            <tr data-id="@blk._Id">
                <td class="right">@blk.Name</td>
                <td class="right">@blk.Size</td>
                <td class="right">@blk.Label</td>
                <td class="right">@blk.UUID</td>
                <td class="right">@blk.PartLabel</td>
                <td class="right">@blk.PartUUID</td>
                <td class="right">@blk.Type</td>
                <td class="right">@blk.DiskType</td>
                <td class="right">@blk.MountPoint</td>
            </tr>
        }
    </tbody>
</table>

<div class="grid">
    <div class="row">
        @foreach (string block in Antd.Storage.Volumes.BlockList()) {
        <div class="span6">
            <table class="table">
                <tbody>
                    <tr>
                        <td colspan="2" rowspan="4" style="margin-left: 20px;">
                            <canvas id="myChart" width="200" height="200"></canvas>
                        </td>
                        <th colspan="4"> @block</th>
                    </tr>
                    <tr>
                        <td>Total</td>
                        <td class="totPer"></td>
                        <td class="totDim"></td>
                        <td rowspan="3"><i class="icon-cog"></i></td>
                    </tr>
                    <tr>
                        <td>Free</td>
                        <td class="frePer"></td>
                        <td class="freDim"></td>
                    </tr>
                    <tr>
                        <td>Used</td>
                        <td class="usePer"></td>
                        <td class="useDim"></td>
                    </tr>
                </tbody>
            </table>
        </div>
        }
    </div>
</div>

<script type="text/javascript">
    var data = [
    {
        value: 65,
        color: "#F7464A",
        highlight: "#F7464A",
        label: "used"
    },
    {
        value: 35,
        color: "#A7BD39",
        highlight: "#A7BD39",
        label: "free"
    }
    ];
    var chartOptions = {
        animation: false,
        segmentShowStroke: true,
        segmentStrokeColor: "#fff",
        segmentStrokeWidth: 2,
        percentageInnerCutout: 50,
        legendTemplate: "<ul class=\"<%=name.toLowerCase()%>-legend\"><% for (var i=0; i<segments.length; i++){%><li><span style=\"background-color:<%=segments[i].fillColor%>\"></span><%if(segments[i].label){%><%=segments[i].label%><%}%></li><%}%></ul>"
    };

    var ctx = document.getElementById("myChart").getContext("2d");
    var myPieChart = new Chart(ctx).Pie(data, chartOptions);
</script>
