@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{Layout = "_layout.cshtml";}

@section PageBar {
    <style type="text/css">
        #System-TB {
            border-bottom: 10px solid #A7BD39;
            height: 80px !important;
        }
    </style>
    <nav class="navigation-bar bg-anthilla-gray-m page-bar menu-bar" style="height: 50px !important;">
        <nav class="navigation-bar-content">
            <div class="element upcase fg-anthilla-green border-2-anthilla-gray-m no-overlay" style="padding-top: 11px;">
                <i class="icon-wrench on-left" style="line-height: 5px;"></i>
                Config
            </div>
            <div class="element-divider"></div>

            <a data-role="export-conf" class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay" style="padding-top: 11px;">
                Export Configuration
            </a>

            <a class="element place-right upcase fg-anthilla-green border-2-anthilla-gray-m no-overlay anchor" data-scrollto="top" style="padding-top: 8px;">
                <i class="icon-arrow-up"></i>
            </a>
        </nav>
    </nav>
}

@section MainContent {
    <div id="ValueBundlesContainer" style="float: left;">
        <form id="ValueBundleDashboard" action="/cfg/addvalue" method="POST" enctype="multipart/form-data">
            <div style="display: inline-block; float: left; margin-right: 9px; height: 35px;" class="bg-anthilla-gray selectizecontainer">
                <input id="valueBundleTag" name="Tag" type="text" class="bg-anthilla-gray" style="width: 258px; padding: 10px; margin-bottom: 5px; display: inline;" autocomplete="off">
            </div>
            <input name="Key" type="hidden" value="">
            <input placeholder="Value" name="Value" type="text" class="bg-anthilla-gray" style="width: 258px; padding: 10px; margin-bottom: 5px; display: inline;" autocomplete="off">
            <input type="submit" class="bg-anthilla-green" style="width: 90px; padding: 10px; margin-bottom: 5px; display: inline; color: #3A3A3A !important;" autocomplete="off" value="ADD">
        </form>
        <table class="table">
            <tbody>
                <tr style="border-bottom:2px solid #A7BD39;">
                    <td style="width: 40%;">Tag(Context)</td>
                    <td>Value</td>
                    <td style="width: 100px;">ValueID(Index)</td>
                    <td style="width: 100px;"></td>
                </tr>
                @foreach (antdlib.Config.ConfigManagement.ValuesBundle val in Model.ValueBundle) {
                <tr>
                    <td>@val.Tag</td>
                    <td>@val.Value</td>
                    <td>@val.Key</td>
                    <td><p data-role="delete-value" data-tag="@val.Tag" data-key="@val.Key" data-value="@val.Value" class="bg-anthilla-orange button">X</p></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div id="CommandBundleContainer" style="float: right;">
        <form id="ValueBundleDashboard" action="/cfg/addcommand" method="POST" enctype="multipart/form-data">
            <input data-role="command-place" name="Command" placeholder="Type your command here..." type="text" class="bg-anthilla-gray" style="width: 700px; padding: 10px; margin-bottom: 5px; display: inline;" autocomplete="off">
            <input type="submit" class="bg-anthilla-green" style="width: 94px; padding: 10px; margin-bottom: 5px; display: inline; color: #3A3A3A !important;" autocomplete="off" value="ADD">
        </form>
        <ul id="ResultsContainer" class="fg-white bg-anthilla-gray border-anthilla-gray" style="display: none; list-style: none; padding: 5px; margin-left: 0px; margin-top: -23px; width: 700px; min-height: 37px;">
            @*<li data-role="query-result" class="bg-anthilla-violet" style="display: inline-block; padding: 3px 15px; margin-right: 2px;"></li>*@
        </ul>
        <p id="Tip" style="padding-left: 10px; display: none;">Tip: write {tag:index}</p>
        <div style="width: 800px; min-height: 250px; padding-right: 10px;" class="bg-anthilla-gray fg-white border-2-anthilla-gray-m" id="MegaContainer">
            <form id="ValueBundleDashboard" action="/cfg/reindex" method="POST" enctype="multipart/form-data">
                <ul id="sortable" style="list-style: none;" class="fg-white">
                    @for (int i = 0; i < Model.CommandBundle.Length; i++) {
                        @if (Model.CommandBundle[i].IsEnabled == true) {
                            <li class="border-2-anthilla-green bg-anthilla-gray" style="padding: 10px; height: 45px; margin-bottom: 3px;">
                                <input name="Guid" type="hidden" value="@Model.CommandBundle[i].Guid" />
                                <input name="Index" type="hidden" value="@i" />
                                <p data-role="command-saved" style="float:left;">
                                    @Model.CommandBundle[i].Command
                                </p>
                                <p data-role="command-exd" style="display: none;float:left">
                                    @antdlib.Config.ConfigManagement.SupposeCommandReplacement(Model.CommandBundle[i].Command)
                                </p>

                                <i data-role="remove-command" data-guid="@Model.CommandBundle[i].Guid" class="icon-remove fg-orange" style="cursor:pointer ;float:right;"></i>
                                <i data-role="disable-command" data-guid="@Model.CommandBundle[i].Guid" class="icon-checkmark fg-lightBlue" style="cursor:pointer ; float:right; margin-right: 10px;"></i>
                                <i data-role="show-command" class="icon-eye fg-white" style="cursor:pointer ;float:right; margin-right: 10px;"></i>
                            </li>
                        }
                        else {
                            <li class="border-2-anthilla-gray-m bg-anthilla-gray" style="padding: 10px; height: 45px; opacity: 0,5;margin-bottom: 3px;">
                                <input name="Guid" type="hidden" value="@Model.CommandBundle[i].Guid" />
                                <input name="Index" type="hidden" value="@i" />
                                <p data-role="command-saved" style="float:left;">
                                    @Model.CommandBundle[i].Command
                                </p>
                                <p data-role="command-exd" style="display: none;float:left">
                                    @antdlib.Config.ConfigManagement.SupposeCommandReplacement(Model.CommandBundle[i].Command)
                                </p>

                                <i data-role="remove-command" data-guid="@Model.CommandBundle[i].Guid" class="icon-remove fg-orange" style="cursor:pointer ;float:right;"></i>
                                <i data-role="enable-command" data-guid="@Model.CommandBundle[i].Guid" class="icon-blocked fg-lightRed" style="cursor:pointer ;float:right; margin-right: 10px;"></i>
                                <i data-role="show-command" class="icon-eye fg-white" style="cursor:pointer ;float:right; margin-right: 10px;"></i>
                            </li>
                        }
                    }
                </ul>
                <input type="submit" class="bg-anthilla-green" value="Save configuration order" style="width: 90%; margin-left: 40px; color:#3A3A3A !important;" />
            </form>
        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript">
        $('i[data-role="show-command"]').mousedown(function () {
            var container = $(this).parents('li');
            container.find('[data-role="command-saved"]').hide();
            container.find('[data-role="command-exd"]').show();
        });

        $('i[data-role="show-command"]').mouseup(function () {
            var container = $(this).parents('li');
            container.find('[data-role="command-saved"]').show();
            container.find('[data-role="command-exd"]').hide();
        });

        function SelectLayoutToEdit() {
            $('[data-role="query-result"]').dblclick(function () {
                $('input[data-role="command-place"]').val($(this).text());
            });
        }

        $('input[data-role="command-place"]').keyup(function () {
            var thisValue = $(this).val();
            if (thisValue.length > 0) {
                jQuery.support.cors = true;
                $.ajax({
                    url: '/cfg/layouts',
                    type: 'GET',
                    success: function (layoutJson) {
                        var results = [];
                        $.each(layoutJson, function (i, item) {
                            if (item.name.indexOf(thisValue) == 0) {
                                results.push(item.name);
                                //return false;
                            }
                        });
                        if (results.length > 0) {
                            DisplayResults(results);
                        }
                        else {
                            CleanResults();
                            HideDisplayer();
                        }
                    }
                });
            }
            else {
                CleanResults();
                HideDisplayer();
            }
        });

        function ShowDisplayer() {
            $('#ResultsContainer').show();
        }

        function HideDisplayer() {
            $('#ResultsContainer').hide();
        }

        function DisplayResults(objectsToDisplay) {
            ShowDisplayer();
            CleanResults();
            $.each(objectsToDisplay, function (i, item) {
                $('#ResultsContainer').append('<li data-role="query-result" class="bg-anthilla-violet" style="display: inline-block; padding: 3px 15px; margin-right: 2px;">' + item + '</li>');
                SelectLayoutToEdit();
            });
        }

        function CleanResults() {
            var container = $('#ResultsContainer');
            container.html('');
        }

        $('a[data-role="export-conf"]').click(function (event) {
            var g = $(this).attr('data-guid');
            jQuery.support.cors = true;
            $.ajax({
                url: '/cfg/export',
                type: 'POST',
                success: function (data) {
                    location.reload(true);
                }
            });
        });

        $("#sortable").sortable({
            stop: function (event, ui) {
                RefreshCommandIndexes();
            }
        }).disableSelection();

        $(document).on('click', 'body', function () {
            RefreshCommandIndexes();
        });

        $(document).ready(function () {
            $('#valueBundleTag').hide();
        });

        function RefreshCommandIndexes() {
            $('input[name=Index]').each(function (index) {
                $(this).val('');
                $(this).val(index);
            });
        }

        $('i[data-role="remove-command"]').click(function (event) {
            var g = $(this).attr('data-guid');
            jQuery.support.cors = true;
            $.ajax({
                url: '/cfg/delcommand',
                type: 'POST',
                data: {
                    Guid: g
                },
                success: function (data) {
                    location.reload(true);
                }
            });
        });

        $('i[data-role="disable-command"]').click(function (event) {
            var g = $(this).attr('data-guid');
            jQuery.support.cors = true;
            $.ajax({
                url: '/cfg/disablecommand',
                type: 'POST',
                data: {
                    Guid: g
                },
                success: function (data) {
                    location.reload(true);
                }
            });
        });

        $('i[data-role="enable-command"]').click(function (event) {
            var g = $(this).attr('data-guid');
            jQuery.support.cors = true;
            $.ajax({
                url: '/cfg/enablecommand',
                type: 'POST',
                data: {
                    Guid: g
                },
                success: function (data) {
                    location.reload(true);
                }
            });
        });

        $('p[data-role="delete-value"]').click(function () {
            var t = $(this).attr('data-tag');
            var k = $(this).attr('data-key');
            var v = $(this).attr('data-value');
            jQuery.support.cors = true;
            $.ajax({
                url: '/cfg/delvalue',
                type: 'POST',
                data: {
                    Tag: t,
                    Key: k,
                    Value: v
                },
                success: function (data) {
                    location.reload(true);
                }
            });
        });

        $('input[data-role="command-place"]').focusin(function () {
            $('#Tip').show();
        });

        $('input[data-role="command-place"]').focusout(function () {
            $('#Tip').hide();
        });

    </script>
}
