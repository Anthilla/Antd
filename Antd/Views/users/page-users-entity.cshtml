<legend id="Entity">User Entity</legend>
<form id="UserIdentityDashboard" action="/users/identity" method="POST" enctype="multipart/form-data" class="grid" autocomplete="off">
    <div class="row">
        <div class="span3">
            <label>user name</label>
        </div>
        <div class="span6">
            <input name="UserEntity" type="text" class="bg-anthilla-gray" style="height: 30px; width: 90%;" autocomplete="off">
        </div>
    </div>
    <div class="row">
        <div class="span3">
            <label>password</label>
        </div>
        <div class="span6">
            <input name="UserPassword" type="password" class="bg-anthilla-gray" style="height: 30px; width: 90%;" autocomplete="off">
        </div>
    </div>
    <div class="row">
        <div class="span3"><label>&nbsp</label></div>
        <div class="span6"><input type="submit" class="bg-anthilla-green" value="Create New User Identity" style="height: 30px; width: 90%; color: #3A3A3A !important;"></div>
    </div>
</form>
<hr class="bg-anthilla-green" />
<div id="Container" style="width: 45%;">
    @foreach (antdlib.Users.UserEntity.UserEntityModel user in Model.UserEntities) {
        <ul id="sortable" style="list-style: none;" class="fg-white">
            <li data-role="user" data-user-guid="@user.MasterGuid" class="border-2-anthilla-green bg-anthilla-gray" style="padding: 10px; height: 45px; margin-bottom: 3px;">
                <i class="icon-user fg-white"></i>
                <p style="display: inline-block; width: 175px;">
                    @user.MasterGuid
                </p>
                <p style="display: inline-block;">
                    @user.MasterUsername
                </p>
                <i data-role="remove-user" data-guid="@user.MasterGuid" class="icon-remove fg-orange" style="cursor: pointer; float: right;"></i>
                <i data-role="disable-user" data-guid="@user.MasterGuid" class="icon-checkmark fg-lightBlue" style="cursor: pointer; float: right; margin-right: 10px;"></i>
            </li>
            @foreach (antdlib.Users.UserEntity.UserEntityModel.Claim claim in user.Claims) {
                <li data-role="claim" data-user-guid="@user.MasterGuid" data-claim-guid="@claim.ClaimGuid" class="border-2-anthilla-gray bg-anthilla-gray" style="display: none; padding: 10px; height: 45px; margin-bottom: 3px;">
                    <input name="MasterGuid" type="hidden" value="@user.MasterGuid" />
                    <p style="display: inline-block; width: 175px; float: left;">
                        @claim.Key
                    </p>
                    <p style="display: inline-block; width: 250px; overflow: hidden;">
                        @claim.Value
                    </p>

                    @if (!claim.Key.StartsWith("antd-master-")) {
                        <i data-role="remove-claim" data-user-guid="@user.MasterGuid" data-claim-guid="@claim.ClaimGuid" class="icon-remove fg-orange" style="cursor: pointer; float: right;"></i>
                    }
                </li>
            }
            <li data-role="claim" data-user-guid="@user.MasterGuid" class="border-2-anthilla-gray bg-anthilla-gray" style="display: none; padding: 10px; height: 93px; margin-bottom: 3px;">
                <form action="/users/identity/addclaim" method="POST" enctype="multipart/form-data" autocomplete="off">
                    <input name="Userguid" type="hidden" value="@user.MasterGuid" />

                    <input name="Type" value="identity" type="radio" /> Identity
                    <input name="Type" value="password" type="radio" /> Password
                    <input name="Type" value="token" type="radio" /> Token
                    <input name="Type" value="other" type="radio" /> Other
                    <br />
                    <br />
                    <input name="Key" placeholder="Key" type="text" class="bg-anthilla-gray" style="width: 31%; height: 26px;">
                    <input name="Value" placeholder="Value" type="text" class="bg-anthilla-gray" style="width: 31%; height: 26px;">
                    <input type="submit" class="bg-anthilla-green" value="Add Claim" style="width: 100px; color: #3A3A3A !important;">
                </form>
            </li>
        </ul>
    }
</div>