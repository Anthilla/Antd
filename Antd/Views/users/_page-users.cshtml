@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{Layout = "_layout.cshtml";}

@section PageBar {
    @Html.Partial("_users-pagebar")
}

@section Dashboard {
    @Html.Partial("_cctable-dashboard", Model.CurrentContext)
    @Html.Partial("page-users-dashboard")
}

@section MainContent {
    @if (Model.Count > 0) {
        @Html.Partial("_cctable-main", Model.CCTable)
    }
    @Html.Partial("page-users-entity", Model)
    @Html.Partial("page-users-system", Model)
    @Html.Partial("page-users-groups", Model)
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type="text"]').each(function() {
                $(this).val('');
            });
            $('input[type="password"]').each(function () {
                $(this).val('');
            });
        });

        $('.search-field').keyup(function() {
            var queryString = $(this).val();
            var table = $('.searchable');
            var tableBody = table.children('tbody');
            var row = tableBody.children('tr');
            row.each(function(index) {
                var thisRow = $(this);
                var queriedText = $(this).text();
                if (queriedText.indexOf(queryString) != -1) {
                    thisRow.show();
                }
                if (queriedText.indexOf(queryString) < 0) {
                    thisRow.hide();
                }
            });
        });

        $('i[data-role="remove-claim"]').click(function() {
            var userGuid = $(this).attr('data-user-guid');
            var claimGuid = $(this).attr('data-claim-guid');
            jQuery.support.cors = true;
            $.ajax({
                url: '/users/identity/delclaim',
                type: 'POST',
                data: {
                    Userguid: userGuid,
                    Guid: claimGuid
                },
                success: function() {
                    location.reload(true);
                }
            });
        });

        $('li[data-role="user"]').click(function() {
            var userGuid = $(this).attr('data-user-guid');
            $('li[data-user-guid="' + userGuid + '"]').not('li[data-role="user"]').toggle();
        });

    </script>
}