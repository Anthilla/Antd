            <div class="element-divider"></div>
            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#Entity" style="padding-top: 11px;">
                Entity
            </a>
            <div class="element-divider"></div>
            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#System" style="padding-top: 11px;">
                System
            </a>
            <div class="element-divider"></div>
            <a class="element upcase fg-anthilla-green border-2-anthilla-green no-overlay anchor" data-scrollto="#Groups" style="padding-top: 11px;">
