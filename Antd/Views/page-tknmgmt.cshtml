@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{Layout = "_layout.cshtml";}

@section PageBar {
    <style type="text/css">
        #System-TB {
            border-bottom: 10px solid #A7BD39;
            height: 80px !important;
        }
    </style>
    <nav class="navigation-bar bg-anthilla-gray-m page-bar menu-bar">
        <nav class="navigation-bar-content">
            <div class="element upcase fg-anthilla-green border-2-anthilla-gray-m no-overlay" style="padding-top: 11px;">
                <i class="icon-console on-left" style="line-height: 5px;"></i>
                Token Management
            </div>
        </nav>
    </nav>
}

@section MainContent {
    <form action="/tkn" method="POST" enctype="multipart/form-data">
        <div class="grid">
            <div class="row">
                <div class="span3">
                    <label>Username</label>
                    <input type="text" name="Username">
                </div>
                <div class="span3">
                    <label>Token</label>
                    <input type="text" name="Token" class="noenter">
                </div>
                <div class="span3">
                    <label>&nbsp</label>
                    <input id="submit" class="bg-blue fg-white" type="submit" value="Submit">
                </div>
            </div>
        </div>
    </form>
    <hr class="bg-anthilla-green" />
    @*<table id="Output" class="table">
        <tbody>
            @foreach (antdlib.Auth.TokenUserRelation token in Model.Tokens) {
                <tr>
                    <td class="right">@token.username</td>
                    <td class="right">@token.tokenID</td>
                    <td class="right" style="width: 150px;"><p id="RemoveTokenUser" data-username="@token.username" class="button bg-anthilla-orange">Remove</p></td>
                </tr>
            }
        </tbody>
    </table>*@
}

@section Scripts {
    <script type="text/javascript">
        $('#RemoveTokenUser').click(function () {
            var u = $(this).attr('data-username');
            jQuery.support.cors = true;
            $.ajax({
                url: '/tkn/remove',
                type: 'POST',
                data: {
                    Username: u
                },
                success: function (data) {
                    location.reload(true);
                }
            });
        });

        $(document).ready(function () {
            $('input.noenter').keypress(function (event) {
                if (event.keyCode == 10 || event.keyCode == 13) {
                    event.preventDefault();
                }
            });
        });
    </script>
}